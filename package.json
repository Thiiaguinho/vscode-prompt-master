{
  "name": "vscode-prompt-master",
  "displayName": "VSCode Prompt Master",
  "description": "Crie e gerencie prompts com arquivos selecionados como contexto diretamente no VSCode.",
  "version": "0.0.1",
  "publisher": "seuUsuario",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Productivity"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "install": "npm install"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "typescript": "^5.0.0",
    "vsce": "^2.14.0"
  },
  "activationEvents": [
    "onCommand:vscode-prompt-master.openPromptPanel",
    "onView:promptMasterView"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscode-prompt-master.openPromptPanel",
        "title": "Prompt Master: Abrir painel de prompts"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "promptMasterView",
          "name": "Prompt Master"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vscode-prompt-master.openPromptPanel",
        "key": "alt+2",
        "mac": "alt+2",
        "when": "editorTextFocus"
      }
    ]
  }
}
